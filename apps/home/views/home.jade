extends ../../../views/layout

block content
  div(class=['navbar', 'navbar-inverse', 'navbar-fixed-top'])
    .navbar-inner
      .container
        button(class=['btn', 'btn-navbar'], type='button', data-toggle='collapse', data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        .nav-collapse.collapse
          form.navbar-form.pull-right(action="/sessions", method="POST")
            input.span2(type="text", placeholder="Username", name="username")
            input.span2(type="password", placeholder="Password", name="password")
            input.btn(type='submit', value="Sign In")
    .container
      .hero-unit
        h1 Welcome!
        p.
          Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod 
          tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, 
          quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
      .row
        .span6
        .span6
          form(id="signup", action="/users", method="post")
            fieldset
              legend Sign Up
              label Username:
                input.span3(name="username", type="text", placeholder="Username")
              label Password:
                input.span3(name="password", type="password", placeholder="Password")
              label Email:
                input.span3(name="email", type="email", placeholder="Email")
              label Birthday:
                input.span3(name="birthday", type="date", placeholder="MM/DD/YYYY")
              input.btn.btn-primary.pull-right(type="submit", value="SignUp")